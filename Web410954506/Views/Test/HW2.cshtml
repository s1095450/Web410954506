
@{
    ViewBag.Title = "HW2";
}

<h2>HW2</h2>

@using (Html.BeginForm("Action", "Controller", FormMethod.Post))
{
    <p>
        姓名:@Html.TextBox("name")
    </p>
    <p>
        帳號:@Html.TextBox("email")
    </p>
    <p>
        密碼:@Html.Password("password")
    </p>
    <p>
        性別:@Html.RadioButton("male",1)男生
        @Html.RadioButton("female",2)女生
    </p>
    <p>
        興趣:@Html.CheckBox("interest1")游泳
        @Html.CheckBox("interest2")閱讀
        @Html.CheckBox("interest3")看電影
    </p>
    <p>
        自我介紹:@Html.TextArea("about")
    </p>
}

